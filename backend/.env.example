# Backend NAHB - Variables d'environnement

# ============================================
# Base de donn√©es MySQL + Prisma
# ============================================
DATABASE_URL="mysql://user:password@localhost:3306/nahb_db"
SHADOW_DATABASE_URL="mysql://user:password@localhost:3306/nahb_db_shadow"

# ============================================
# Authentification JWT
# ============================================
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRATION="7d"

# ============================================
# Serveur
# ============================================
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# ============================================
# Upload fichiers (optionnel)
# ============================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# ============================================
# Email (optionnel - futur)
# ============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ============================================
# Logger
# ============================================
LOG_LEVEL=debug
